{
    "builds": [
      {
        "src": "lip_products/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "excludeFiles": [
            "venv/**", 
            "**/*.pyc", 
            "**/__pycache__/**", 
            ".git/**", 
            "*.sqlite3",
            "*.db",
            "node_modules/**",
            "tests/**",
            "docs/**"
          ]
        }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "lip_products/wsgi.py"
      }
    ]
  }